MDScreen:
    name: "signup"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1  # White background

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}  # Positioned at the top
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 0.1, 0.1, 0.23, 1  # Custom text color
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"  # Transition back to login screen

        MDLabel:
            text: "H i !"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": .6, "center_y": .85}  # Positioned for visual appeal
            color: 0.0, 0.0, 0.23, 1  # Consistent label color

        MDLabel:
            text: "Create Account"
            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": .6, "center_y": .79}  # Position for clarity
            color: 0.53, 0.52, 0.76, 1  # Soft text color

        # Email TextInput
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .68}

            TextInput:
                hint_text: "Email"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.0, 0.0, 0.23, 1  # Converted to normalized RGB values
                cursor_color: 0.0, 0.0, 0.23, 1  # Converted to normalized RGB values
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False

            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: 0.70, 0.70, 0.70, 1 

        # Username TextInput
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .58}

            TextInput:
                hint_text: "Username"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0  # White background
                foreground_color: 0.0, 0.0, 0.23, 1  # Custom text color
                cursor_color: 0.0, 0.0, 0.23, 1  # Cursor color
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False

            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: 0.70, 0.70, 0.70, 1 
        

        # Password TextInput
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .48}

            TextInput:
                hint_text: "Password"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0  # White background
                foreground_color: 0.0, 0.0, 0.23, 1  # Custom text color
                cursor_color: 0.0, 0.0, 0.23, 1  # Cursor color
                font_size: "14sp"
                cursor_width: "2sp"
                password: True  # Password field

        # Separator below Password TextInput
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: 0.70, 0.70, 0.70, 1  # Separator color

        # Sign Up Button
        Button:
            text: "SIGN UP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .36}
            background_color: 0, 0, 0, 0  # Transparent background
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "home"  # Transition to home screen
            canvas.before:
                Color:
                    rgb: 0.13, 0.13, 0.13, 1   # Button color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        # Existing Account Message
        MDTextButton:
            text: "Already have an account?"
            pos_hint: {"center_x": .5, "center_y": .25}
            color: 0.53, 0.52, 0.76, 1  # Color for the text button
            font_size: "12sp"
            font_name: "BPoppins"

        # Login Button
        MDTextButton:
            text: "Login"
            font_name: "BPoppins"
            font_size: "12sp"
            pos_hint: {"center_x": .5, "center_y": .20}
            color: 0.13, 0.13, 0.13, 1   # Login button color
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"  # Transition to login screen
