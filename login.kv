MDScreen:
    name: "login"
    
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 0.1, 0.1, 0.23, 1  # Converted to normalized RGB values
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "W e l c o m e !"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": .6, "center_y": .85}
            color: 0.0, 0.0, 0.23, 1  # Converted to normalized RGB values

        MDLabel:
            text: "Sign in to continue"
            font_name: "MPoppins"
            font_size: "18sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: 0.53, 0.52, 0.76, 1  # Converted to normalized RGB values

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .63}

            TextInput:
                hint_text: "Email"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.0, 0.0, 0.23, 1  # Converted to normalized RGB values
                cursor_color: 0.0, 0.0, 0.23, 1  # Converted to normalized RGB values
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False

            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: 0.70, 0.70, 0.70, 1  # Converted to normalized RGB values

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .5}

            TextInput:
                hint_text: "Password"
                font_name: "MPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.0, 0.0, 0.23, 1  # Converted to normalized RGB values
                cursor_color: 0.0, 0.0, 0.23, 1  # Converted to normalized RGB values
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                password: True

            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .03
                md_bg_color: 0.70, 0.70, 0.70, 1  # Converted to normalized RGB values

        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .34}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "home"
            canvas.before:
                Color:
                    rgb: 0.13, 0.13, 0.13, 1   # Converted to normalized RGB values
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        MDTextButton:
            text: "Forgot Password?"
            pos_hint: {"center_x": .5, "center_y": .28}
            color: 0.13, 0.13, 0.13, 1   # Converted to normalized RGB values
            font_size: "12sp"
            font_name: "BPoppins"

        MDLabel:
            text: "Don't have an account?"
            font_name: "BPoppins"
            font_size: "12sp"
            pos_hint: {"center_x": .68, "center_y": .04}
            color: 0.53, 0.52, 0.76, 1  # Converted to normalized RGB values

        MDTextButton:
            text: "Sign up"
            font_name: "BPoppins"
            font_size: "12sp"
            pos_hint: {"center_x": .75, "center_y": .04}
            color: 0.13, 0.13, 0.13, 1  # Converted to normalized RGB values
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
